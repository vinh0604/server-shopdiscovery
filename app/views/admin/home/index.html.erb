<script type='text/ng-template' id='test.html'>
  {{name}}
</script>
<script type='text/ng-template' id='users.html'>
  <div class="input-append"><input type="text" ng-model='query'><span class="add-on"><i class="icon-search"></i></span></div>
  <table class="table table-striped table-condensed table-hover">
    <thead>
      <tr>
        <th><input type="checkbox" ng-model="checkAll"></th>
        <th>Username</th>
        <th>Email</th>
        <th>Full Name</th>
        <th>Gender</th>
        <th>Action</th>                                           
      </tr>
      <tbody>
        <tr ng-repeat='user in usersData' ng-click='user.checked = !user.checked'>
          <td><input type="checkbox" ng-checked="user.checked"></td> 
          <td>{{user.username}}</td>
          <td>{{user.email}}</td>
          <td>{{user.contact.full_name}}</td>
          <td>{{user.contact.gender|gender}}</td>
          <td><button class="btn btn-mini btn-primary" type="button" ng-click="$event.stopPropagation();"><i class="icon-pencil icon-white"></i> Edit</button></td>
        </tr>
      </tbody>
    </thead>
  </table>
  <div class="spacer"></div>
  <div class="pagination pull-right">
        <ul>
          <li ng-class="{disabled: currentPage == 0}">
            <a href ng-click="prevPage()">« Prev</a>
          </li>
          <li ng-show="lowerPage > 0" ng-click="setPage(0)">
            <a href>1</a>
          </li>
          <li ng-show="lowerPage > 1" class="disabled">
            <a href>...</a>
          </li>
          <li ng-repeat="n in _.range(lowerPage,upperPage+1)"
            ng-class="{active: n == currentPage}"
            ng-click="setPage()">
            <a href ng-bind="n + 1">1</a>
          </li>
          <li ng-show="upperPage < (totalPage - 2)" class="disabled">
            <a href>...</a>
          </li>
          <li ng-show="upperPage < (totalPage - 1)" ng-click="setPage(totalPage - 1)">
            <a href ng-bind="totalPage">1</a>
          </li>
          <li ng-class="{disabled: currentPage == totalPage - 1}">
            <a href ng-click="nextPage()">Next »</a>
          </li>
        </ul>
      </div>
</script>
<div class="container" style="margin-top: 10px;">
  <div class="row">
  <div class="span3">
    <div class="sidebar-nav" ng-controller="navCtrl">
      <div class="well" style="padding: 8px 0;">
        <ul class="nav nav-list"> 
          <li class="nav-header">Admin Menu</li>        
          <li ng-repeat='item in navData' ng-class="{active: isActiveRoute(item.id)}">
            <a href="{{item.id}}"><i ng-class="item.className"></i> {{item.value}}</a>
          </li>
          <li class="divider"></li>
          <li><a href="#" ng-click="logOut()"><i class="icon-share"></i> Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="span9">
    <div ng-view></div>
  </div>
  </div>
</div>