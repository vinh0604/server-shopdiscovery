<script type='text/ng-template' id='test.html'>
  {{name}}
</script>
<script type='text/ng-template' id='users.html'>
  <%= render 'angular/users' %>
</script>
<script type='text/ng-template' id='user.html'>
  <%= render 'angular/user' %>
</script>
<script type='text/ng-template' id='partialCategoryMenu.html'>
  <li ng-repeat="category in categories" ng-class="{'dropdown-submenu': category.hasChild}" ng-switch on="category.hasChild">
    <a href ng-click="doChangeCategory($event);">{{category.name}}</a>
    <ul class="dropdown-menu" ng-switch-when="true" ng-init="categories = category.children;" ng-include="'partialCategoryMenu.html'">
    </ul>
  </li>
</script>
<script type='text/ng-template' id='products.html'>
  <%= render 'angular/products' %>
</script>
<script type='text/ng-template' id='product.html'>
  <%= render 'angular/product' %>
</script>
<script type='text/ng-template' id='shops.html'>
  <%= render 'angular/shops' %>
</script>
<script type='text/ng-template' id='shop.html'>
  <%= render 'angular/shop' %>
</script>
<div class="container" style="margin-top: 10px;">
  <div class="row">
  <div class="span3">
    <div class="sidebar-nav" ng-controller="navCtrl">
      <div class="well" style="padding: 8px 0;">
        <ul class="nav nav-list"> 
          <li class="nav-header">Admin Menu</li>        
          <li ng-repeat='item in navData' ng-class="{active: isActiveRoute(item.id)}">
            <a href="{{item.id}}"><i ng-class="item.className"></i> {{item.value}}</a>
          </li>
          <li class="divider"></li>
          <li><a href="#" ng-click="logOut()"><i class="icon-share"></i> Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="span9">
    <div ng-view></div>
  </div>
  </div>
</div>